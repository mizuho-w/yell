<!DOCTYPE html>
<html>
  <head>
    <title>Yell!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('fav2.png') %>
  </head>

  <body style="padding-top: 5rem">
    <nav class ="navbar navbar-expand navbar-dark bg-dark fixed-top">
      <a href="#" class="navbar-brand">YELL!</a>

      <!-- サインインしている場合 -->
      <% if user_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to users_mypage_path do %><span class="nav-link">マイページ</span><% end %></li>
        <li class="nav-item"><%= link_to items_path do %><span class="nav-link">投稿一覧</span><% end %></li>
        <li class="nav-item"><%= link_to root_path do %><span class="nav-link">予約一覧</span><% end %></li>
        <li class="nav-item"><%= link_to homes_about_path do %><span class="nav-link">サイト説明</span><% end %></li>
        <li class="nav-item"><%= link_to destroy_user_session_path, method: :delete do %><span class="nav-link">ログアウト</span><% end %></li>
      <!-- サインインしていない場合 -->
      <% else %>
       <ul class="navbar-nav">
        <li class="nav-item"><%= link_to new_user_session_path do %><span class="nav-link">サインイン</span><% end %></li>
        <li class="nav-item"><%= link_to new_user_registration_path do %><span class="nav-link">新規会員登録</span><% end %></li>
        <li class="nav-item"><%= link_to items_path do %><span class="nav-link">投稿一覧</span><% end %></li>
        <li class="nav-item"><%= link_to homes_about_path do %><span class="nav-link">サイト説明</span><% end %></li>
      <% end %>

      </ul>
    </nav>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
