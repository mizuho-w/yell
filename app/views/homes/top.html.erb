<div class="row">
  <div class="col-12">

	<div class="carousel slide carousel-fade" id="c1" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#c1" data-slide-to="0" class="active"></li>
			<li data-target="#c1" data-slide-to="1"></li>
			<li data-target="#c1" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
			<div class="carousel-item active"><%= image_tag asset_path("online.jpg"), class:"d-block w-100" %></div>
			<div class="carousel-item"><%= image_tag asset_path("live.jpg"), class:"d-block w-100" %></div>
			<div class="carousel-item"><%= image_tag asset_path("sumaho.jpg"), class:"d-block w-100" %></div>
		</div>
		<a href="#c1" class="carousel-control-prev" data-slide="prev">
			<span class="carousel-control-prev-icon"></span>
			<span class="sr-only">前の画像へ</span>
		</a>
		<a href="#c1" class="carousel-control-next" data-slide="next">
			<span class="carousel-control-next-icon"></span>
			<span class="sr-only">次の画像へ</span>
		</a>
	</div>

  </div>
</div>



<div class="row">

	<div class="col-8 mt-5">

		<h3>人気のアイテム</h3>
		<div class="d-flex flex-row">
			<% @items.first(3).each do |item| %>
			  <div class="popular_item d-sm-flex ml-4 mt-3">
				<%= link_to item_path(item), class: "post_item" do %>
				  <%= attachment_image_tag(item, :img, :fill,150,150,fallback:"noimg.jpg",size:"150x150") %>
				<% end %>
			  </div>
			<% end %>
		</div>

		<h3 class="mt-5">新規投稿作品</h3>
		<div class="d-flex flex-row">
			<% @items.last(3).each do |item| %>
			  <div class="new_post_item d-sm-flex ml-4 mt-3">
				<%= link_to item_path(item), class: "post_item" do %>
				  <%= attachment_image_tag(item, :img, :fill,150,150,fallback:"noimg.jpg",size:"150x150") %>
				<% end %>
			  </div>
			<% end %>
		</div>

		<div class="more_link text-right">
		  	<%= link_to ">>もっと見る", items_path, class: "more btn btn-link" %>
		</div>


	</div>

	<div class="col-4 mt-5">
		<h3>HOTワード</h3>
		<div class="hot_word">
			<% @items.last(5).each do |item| %>
			  <div class="hot_word_list">
			  	<%= link_to search_path(name_search:item.artist_name) do %>
			  	<%= item.artist_name %>
			  	<% end %>
			  </div>
			<% end %>
		</div>
	</div>

</div>
