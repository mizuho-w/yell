<div class="row">
	<div class="col-3">
			<%= render 'users/profile', user: current_user %>
	</div>
	<div class="offset-1 col-8">
		<h3>予約作品</h3>
		<% @reservations.each do |reservation| %>
		<div class="d-sm-flex">
			<div class="my_post_item flex-sm-row ml-4 mt-3">
				<%= link_to item_path(reservation.item.id) do %>
				<%= attachment_image_tag(reservation.item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"150x150") %>
				<% end %>
			</div>
		<% end %>
	    </div>
	</div>
</div>