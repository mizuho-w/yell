<div class="row">

	<div class="col-3">
			<%= render 'users/profile', user: current_user %>
	</div>

	<div class="offset-1 col-8">
		<h3>予約作品</h3>
		<div class="reservation_item_each d-flex">
		<% @reservations.each do |reservation| %>
			<div class="reservation_item flex-wrap ml-4 mt-3 rounded border border-warning">
				<%= link_to item_path(reservation.item.id) do %>
				<%= attachment_image_tag(reservation.item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"150x150") %>
				<% end %>
			</div>
		<% end %>
	    </div>
	</div>

</div>