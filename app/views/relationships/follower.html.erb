<div class="row">

  <h3>フォロワー</h3>

<table class="table">
    <thead>
     <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td><%= link_to "ユーザー詳細", mypage_path(user.id) %></td>
      </tr>
    <% end %>
</tbody>
</table>
</div>