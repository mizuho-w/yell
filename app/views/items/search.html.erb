<div class="row">
	<div class="bg-white radius genre-index pd-20">
		<%= render 'genres/genre' %>
	</div>

<h3>検索：<%= @tag.name%></h3>
	<div class="items d-sm-flex">
		<% @items.each do |item| %>
		<div class="items_view flex-sm-row ml-4 mt-3">
			<%= link_to item_path(item) do %>
			<%=attachment_image_tag(item,:img ,:fill,300,300,fallback:"noimg.jpg",size:"200x200") %>
		    <% end %>
		</div>
		<% end %>
	</div>
</div>
<div class="col-md-offset-10">
	<%= paginate @items %>
</div>
