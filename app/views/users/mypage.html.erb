<div class="row">
	<div class="col-3">
		<%= render 'users/profile', user: current_user %>
	</div>

	<div class="offset-1 col-8">

	    <div class="row">
			<div class="user_profile">
				<%= @user.introduction %>
			</div>
		</div>

	    <div class="row">
			<div class="new_post_btn offset-9 mt-2">
				<%= link_to "新規作品投稿", new_item_path, class: "btn btn-outline-info" %>
			</div>
		</div>

	    <div class="row">
			<div class="mt-1 col-12">
				<h5>投稿作品</h5>
				<div class="my_post_item d-flex flex-row ml-4 mt-3">
					<% @items.last(4).each do |item| %>
						<div class="d-sm-flex ml-4">
							<%= link_to item_path(item) do %>
						 		<%= attachment_image_tag(item,:img ,:fill,100,100,fallback:"noimg.jpg",size:"100x100") %>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="offset-8 col-4">
				<%= link_to ">>もっと見る", myitem_path, class: "btn btn-link" %>
			</div>
		</div>

	    <div class="row mt-3">
			<div class="col-12">
				<h5>予約作品</h5>
				<div class="my_post_item d-flex flex-row ml-4 mt-3">
					<% @reservations.last(4).each do |reservation| %>
						<div class="d-sm-flex ml-4">
							<%= link_to item_path(reservation.item.id) do %>
								<%= attachment_image_tag(reservation.item,:img ,:fill,100,100,fallback:"noimg.jpg",size:"100x100") %>
							<% end %>
					  	</div>
	            	<% end %>
	            </div>
			</div>
		</div>

		 <div class="row">
			<div class="offset-8 col-4">
				<%= link_to ">>もっと見る", reserve_myitem_path, class: "btn btn-link" %>
			</div>
	    </div>
	</div>
</div>