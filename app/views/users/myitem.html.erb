<div class="row">
		<div class="col-xs-3">
			<%= render 'users/profile', user: current_user %>
		</div>

		<div class="offset-1 col-xs-8">
			<h2>投稿作品</h2>
		  <div class="post_items_each d-sm-flex">
				<% @items.each do |item| %>
			<div class="post_items flex-sm-row ml-4 mt-3">
				<%= link_to item_path(item) do %>
				<%=attachment_image_tag(item,:img ,:fill,300,300,fallback:"noimg.jpg",size:"240x240") %>
				<% end %>
			</div>
			    <% end %>
		  </div>
		</div>
 </div>