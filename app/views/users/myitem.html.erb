<div class="row">
	<div class="col-3">
		<%= render 'users/profile', user: current_user %>
	</div>

	<div class="offset-1 col-8">
		<h2>投稿作品</h2>
		  <div class="post_items_each d-flex">
			<% @items.each do |item| %>
			<div class="post_items flex-wrap ml-4 mt-3">
				<%= link_to item_path(item) do %>
				<%=attachment_image_tag(item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"150x150") %>
				<% end %>
			</div>
			<% end %>
		  </div>
	</div>
</div>