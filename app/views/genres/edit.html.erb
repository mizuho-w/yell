<div class="row">
	<div class="col-md-5 col-md-offset-1">
		<h4>ジャンル編集</h4>

        <div class="genre-name-text">
        	<%= form_for(@genre, html: {method: "patch"}) do |f| %>
                <label>ジャンル</label>
                <label><%= f.text_field :name %></label>

                <label><%= f.radio_button :is_active, true %>有効</label>
                <label><%= f.radio_button :is_active, false %>無効</label>

            <%= f.submit '変更を保存する', class: "bnt btn-info" %>
            <% end %>

    </div>
</div>
