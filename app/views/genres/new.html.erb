<div class="row">
	<div class="col-md-5 col-md-offset-1">
<h2>ジャンル一覧</h2>

<div class="genre-name-text">
         	<%= form_for @genre, url: genres_path do |f| %>
                <label>ジャンル</label>
                <label><%= f.text_field :name %></label>

                <label><%= f.radio_button :is_active, true %>有効</label>
                <label><%= f.radio_button :is_active, false %>無効</label>

            <%= f.submit '追加', class: "btn btn-info" %>
            <% end %>
        </div>

        <table class="table">
        	<thead>
        		<tr class="active">
        			<th></th>
        			<th></th>
        			<th></th>
        			<th></th>
        		</tr>
        	</thead>
        	<tbody>
        	    <% @genres.each do |genre| %>
        	    <tr>
                    <td><%= genre.name %></td>
                    <% if genre.is_active? %>
                        <td>有効</td>
                    <% else %>
                        <td>無効</td>
                    <% end %>
                    <td><%= link_to "編集", edit_genre_path(genre.id), class: "btn btn-primary" %></td>
                    <td><%= link_to "削除", genre_path(genre), method: :delete, class:"btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>



